<h1>Listing reservations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>Table</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.start_time %></td>
        <td><%= reservation.end_time %></td>
        <td><%= reservation.table %></td>
        <td><%= link_to 'Show', reservation, class: 'link' %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation), class: 'link' %></td>
        <td><%= link_to 'Destroy', reservation, class: 'link', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_reservation_path, class: "btn btn-primary" %>
