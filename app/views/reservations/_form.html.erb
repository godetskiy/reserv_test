<%= form_for(@reservation, html: { role: 'form' }) do |f| %>
  <% if @reservation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>

      <ul>
      <% @reservation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group datetime_container">
    <%= f.label :start_time %><br>

    <div class='input-group date datepicker' >
      <%= f.datetime_field :start_time, class: 'form-control' %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>

  </div>

  <div class="form-group datetime_container">
    <%= f.label :end_time %><br>
    <%#= f.datetime_select :end_time %>

    <div class='input-group date datepicker' >
      <%= f.datetime_field :end_time, class: 'form-control' %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <div class="form-group table_number">
    <%= f.label :table %><br>
    <%= f.number_field :table, min: '1', class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit 'Make a reservation', class: 'btn btn-primary'  %>
  </div>
<% end %>
